<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/accent_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDefaultBackground3"
        android:orientation="horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="0.1dp"
        tools:ignore="UnusedAttribute">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/itComment_profileImg"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:src="@drawable/user"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_8sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2.5dp">

                <TextView
                    android:id="@+id/itComment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/colorText6"
                    android:fontFamily="@font/roboto_regular"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="start"
                    android:maxLines="1"
                    android:maxWidth="@dimen/_120sdp"
                    android:ellipsize="end"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/itComment_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:fontFamily="@font/roboto_regular"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="start"
                    android:maxLines="1"
                    android:maxWidth="@dimen/_70sdp"
                    android:ellipsize="end"
                    android:layout_toEndOf="@id/itComment_name"/>

                <TextView
                    android:id="@+id/dotSep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_centerVertical="true"
                    android:text="@string/big_dot"
                    android:textAlignment="center"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/accent_grey"
                    android:layout_toEndOf="@id/itComment_username"/>

                <TextView
                    android:id="@+id/itComment_timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="bottom"
                    android:text=""
                    android:textColor="@color/accent_grey"
                    android:textSize="@dimen/_11ssp"
                    android:maxLines="1"
                    android:maxWidth="@dimen/_120sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_toEndOf="@id/dotSep"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/itComment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textColor="@color/colorText6"
                android:textSize="@dimen/_12ssp"
                android:gravity="start"
                android:autoLink="all"
                android:linksClickable="true"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>